// save img code
if (!empty($_FILES["img"])) {
    $name = "{prodId}.png";

    try {
        move_uploaded_file($_FILES['img']['tmp_name'], "assets/img/$name");

        var_dump("done ? ");
    } catch (\Throwable $th) {
        echo json_encode($th);
    }
}